extends layout

block content
  h1= title
  p 
    div
      form(name='new_work_order' method='post')
        table.table.table-hover
            thead
              tr
                  th Work Orders Number
                  th Product Type
                  th Output/Hour
                  th Start Date
            tbody
              tr
                td
                  input(type='text', name='workOrderNumber', value = '')
                td
                  select(name='productType')
                    each productType in productTypes
                      option(value=(productType.key)) #{productType.name}
                td
                    input(type='text', name='outputPerHour', value = '')
                td
                    input(type='text', name='startDate', value = '')
        input(type='submit',value='Save',data-transition='fade', data-theme='c')
    a(href="work_orders") Back
